<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:text="Daftar Algoritma Pengurutan"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bubble Sort"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txtDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://koding.alza.web.id/algoritma-bubble-sort/"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Algoritma bubble sort merupakan salah satu teknik pengurutan sederhana, yang dilakukan dengan menelusuri sebuah list, membandingkan elemen yang berdekatan, kemudian menukarnya apabila posisinya tidak tepat.\n\nUntuk mengurutkan seluruh elemen pada list, proses penelusuran ini dilakukan secara berulang-ulang sebanyak n-1 kali (n jumlah elemen pada list), dimana tiap siklus penelusuran bertujuan menempatkan satu angka pada posisi yang tepat.\n\nIstilah bubble sort sendiri digunakan karena secara visual, seolah-olah setiap elemen terlihat bergerak ke atas/kanan (indeks yang lebih besar) seperti gelembung udara yang naik ke permukaan air."
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/lyCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnBubbleSort"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubble Sort" />

                    <Button
                        android:id="@+id/btnSelectionSort"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selection Sort" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnInsertionSort"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insertion Sort" />

                    <Button
                        android:id="@+id/btnQuickSort"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Sort" />

                    <Button
                        android:id="@+id/btnMergeSort"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merge Sort" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:text="Refresh" />
</RelativeLayout>